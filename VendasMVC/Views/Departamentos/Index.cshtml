@model IEnumerable<VendasMVC.Models.Departamento>

@{
    ViewData["Title"] = "Departamentos";
}

<h2>Index</h2>

<p>
    <a asp-action="Adicionar">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                <a asp-action="Alterar" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Detalhes" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Excluir" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
